<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:background="@drawable/button_selector">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_song_name_notification"
        android:textSize="15sp"
        android:textStyle="bold"
        android:lines="1"
        android:ellipsize="end"
        android:text="@string/unknown_song_name"/>
    
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content" 
        android:id="@+id/tv_singer_notification"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:text="@string/unknown_song_name"
        android:layout_below="@+id/tv_song_name_notification"/>
    
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/iv_previous_music_notification"
        android:src="@drawable/previous"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_singer_notification"
        android:layout_marginStart="120dp"
        android:background="@drawable/button_selector"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/iv_play_music_notification"
        android:src="@drawable/play"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_singer_notification"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_selector"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/iv_next_music_notification"
        android:src="@drawable/next"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="120dp"
        android:layout_below="@+id/tv_singer_notification"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_selector"/>

</RelativeLayout>